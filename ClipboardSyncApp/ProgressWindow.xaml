<Window x:Class="ClipboardSyncApp.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardSyncApp"
        mc:Ignorable="d"
        Title="Clipboard Sync" Height="150" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <TextBlock Text="Copying data to flash drive..." VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10"/>
        <ProgressBar x:Name="ProgressBar" Height="30" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10"/>
        <Button Content="Cancel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="Cancel_Click"/>
    </Grid>
</Window>
